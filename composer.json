{
    "name": "kna/hal-bundle",
    "description": "This bundle contains basic tools for development of REST API",
    "type": "symfony-bundle",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "symfony/framework-bundle": "^4.0",
        "symfony/form": "^4.0",
        "symfony/options-resolver": "^4.0",
        "doctrine/common": "^2.8",
        "jms/serializer-bundle": "^2.3.1",
        "white-october/pagerfanta-bundle": "^1.1",
        "willdurand/hateoas-bundle": "^1.3",
        "friendsofsymfony/rest-bundle": "^2.3",
        "symfony/translation": "^4.0",
        "symfony/validator": "^4.0"
    },
    "require-dev": {
        "doctrine/orm": "^2.0",
        "symfony/yaml": "^4.1",
        "symfony/phpunit-bridge": "^4.1",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "symfony/serializer": "^4.0"
    },
    "suggest": {
        "doctrine/orm": "To use Doctrine entities"
    },
    "autoload" : {
        "psr-4" : { "Kna\\HalBundle\\" : "" }
    },
    "autoload-dev": {
        "psr-4": {
            "Kna\\HalBundle\\Tests\\App\\": "Tests/App/src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Klim Naydenov",
            "email": "knaydenov@gmail.com"
        }
    ],
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        }
    }
}
